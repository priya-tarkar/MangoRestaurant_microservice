@model IEnumerable<Mango.Web.Models.ProductDto>
<div class="container border p-4">
    <div class="row  pb-2">
        <div class="col text-primary p-4">
            Product List
        </div>
        <div class="col text-end">
            <a asp-action="CreateProduct" class="btn btn-outline-primary "><i fas fa plus></i>Create new product</a>
        </div>
    </div>

<table>
    <thead>
        <tr >
                <th class="m-7">
                Name
            </th>
                <th class="m-7">
                Category Name
            </th>
                <th class="m-7">
                Price
            </th>
                <th class="m-7"></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model )
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CategoryName</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="EditProduct" class="btn btn-success" asp-route-id="@item.ProductId">Edit</a>
                    <a asp-action="DeleteProduct" class="btn btn-danger" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
</div>
